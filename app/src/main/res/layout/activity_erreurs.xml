<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/err_layout">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Vous avez fait des erreurs !!"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/erreurs"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Nombre d'erreurs : "
        android:gravity="center"
        android:textSize="15sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="corriger les erreurs..."
        android:layout_marginTop="10dp"
        android:onClick="correction"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Choisir un autre exercice"
            android:onClick="choixExo"/>
    </LinearLayout>

</LinearLayout>